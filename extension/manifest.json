{
  "manifest_version": 3,
  "name": "Simple Site Blocker",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*", "file://*/*"],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": true,
    "match_about_blank": true
  }],
  "action": {
    "default_popup": "popup.html"
  }
}