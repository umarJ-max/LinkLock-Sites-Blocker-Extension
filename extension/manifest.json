{
  "manifest_version": 3,
  "name": "WebGuard - Website Blocker",
  "version": "1.0.1",
  "description": "Block distracting websites with quick popup controls",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebGuard - Quick Controls"
  }
}