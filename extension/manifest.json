{
  "manifest_version": 3,
  "name": "LinkLock",
  "version": "1.0",
  "description": "LinkLock - Professional website blocker for enhanced productivity by Umar J",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*", "file://*/*"],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": true,
    "match_about_blank": true
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "LinkLock Logo.png",
      "32": "LinkLock Logo.png",
      "48": "LinkLock Logo.png",
      "128": "LinkLock Logo.png"
    }
  },
  "icons": {
    "16": "LinkLock Logo.png",
    "32": "LinkLock Logo.png",
    "48": "LinkLock Logo.png",
    "128": "LinkLock Logo.png"
  }
}